<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--标题栏样式-->
    <declare-styleable name="titleStyle">
        <!--设置通知栏背景色-->
        <attr name="bar_back_color" format="color" />
        <!--是否高亮-->
        <attr name="lightTheme" format="boolean" />
    </declare-styleable>

    <declare-styleable name="RippleView">
        <attr name="rippleColor" format="color" />
        <attr name="alphaFactor" format="float" />
        <attr name="hover" format="boolean" />
    </declare-styleable>

    <declare-styleable name="SpringIndicator">

        <!--tab text color -->
        <attr name="siTextColor" format="reference" />

        <!--tab text color which is selected-->
        <attr name="siSelectedTextColor" format="reference" />

        <!--tab item bg -->
        <attr name="siTextBg" format="reference" />

        <!--tab text size-->
        <attr name="siTextSize" format="dimension" />

        <!--indicator bg color-->
        <attr name="siIndicatorColor" format="reference" />

        <!--indicator bg colors. should equals your titles count-->
        <attr name="siIndicatorColors" format="reference" />

        <!--max indicator radius-->
        <attr name="siRadiusMax" format="dimension" />

        <!--min indicator radius when moving-->
        <attr name="siRadiusMin" format="dimension" />

    </declare-styleable>
    <!--CircleImageView-->
    <declare-styleable name="CircleImageView">
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
    </declare-styleable>
    <!--圆角TextView-->
    <declare-styleable name="CustomShapTextView">
        <!-- Default Paint Color (color). -->
        <attr name="bgColor" format="reference|color" />
    </declare-styleable>

    <!--refreshView-->
    <declare-styleable name="refreshView">
        <attr name="bg_color" format="color" />
    </declare-styleable>
</resources>