<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
            android:id="@+id/layout_base"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <cn.berfy.sdk.mvpbase.view.StatusMarginBar
                android:id="@+id/common_statusBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <cn.berfy.sdk.mvpbase.view.TitleBarView
                android:id="@+id/common_titlebarview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <LinearLayout
                    android:id="@+id/common_layout_content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"/>

            <TextView
                    android:id="@+id/tv_theme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="@color/transparent_black"
                    android:paddingBottom="@dimen/space_2"
                    android:paddingLeft="@dimen/space_5"
                    android:paddingRight="@dimen/space_5"
                    android:paddingTop="@dimen/space_2"
                    android:text=""
                    android:visibility="gone"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/font_10"/>

            <TextView
                    android:id="@+id/tv_host_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:background="@color/transparent_black"
                    android:paddingBottom="@dimen/space_2"
                    android:paddingLeft="@dimen/space_5"
                    android:paddingRight="@dimen/space_5"
                    android:paddingTop="@dimen/space_2"
                    android:text="测试服"
                    android:visibility="gone"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/font_10"/>
        </RelativeLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>