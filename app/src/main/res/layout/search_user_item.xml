<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_f9f9f9"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tag"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_22"
        android:background="@color/color_f3f3f3"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/space_17"
        android:text="A"
        android:textColor="@color/color_999999" />

    <RelativeLayout
        android:id="@+id/rl_info"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_66"
        android:background="@color/color_white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_66"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/space_6"
                android:padding="@dimen/space_5"
                android:src="@drawable/checkbox_bg"
                android:visibility="gone"/>

            <cn.berfy.sdk.mvpbase.view.CircleImageView
                android:id="@+id/iv_head"
                android:layout_width="@dimen/space_47"
                android:layout_height="@dimen/space_47"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/space_12"
                android:src="@drawable/placeholder" />

            <LinearLayout
                android:layout_width="@dimen/space_200"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/space_18"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="@dimen/space_150"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_20"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="发生分解落实"
                    android:textColor="@color/color_4a4a4a" />

            </LinearLayout>
        </LinearLayout>

        <!--<TextView-->
            <!--android:id="@+id/tv_time"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:layout_marginRight="@dimen/space_22"-->
            <!--android:layout_marginTop="@dimen/space_14"-->
            <!--android:text="刚刚"-->
            <!--android:textColor="@color/color_999999"-->
            <!--android:textSize="@dimen/font_10"-->
            <!--android:visibility="gone"/>-->
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_1"
        android:background="@color/color_f9f9f9" />
</LinearLayout>