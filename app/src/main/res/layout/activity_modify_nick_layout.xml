<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f9f9f9"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_15"
        android:layout_marginTop="@dimen/space_16"
        android:text="@string/modify_nick"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/font_12" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_42"
        android:layout_marginTop="@dimen/space_5"
        android:background="@color/color_ffffff">

        <EditText
            android:id="@+id/et_nick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_15"
            android:layout_marginRight="@dimen/space_50"
            android:layout_centerVertical="true"
            android:background="@null"
            android:textCursorDrawable="@drawable/cursor"
            android:textColorHint="@color/color_b3b3b3"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/font_12"
            android:text="dfdfdff"
            android:lines="1"
            android:inputType="text"/>

        <ImageView
            android:id="@+id/iv_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/space_10"
            android:padding="@dimen/space_10"
            android:src="@drawable/search_cancel_icon" />
    </RelativeLayout>
</LinearLayout>
