<resources>

    <!-- Base application theme. -->
    <style name="AppTheme1" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/common_colorPrimary</item>
        <!--<item name="colorPrimaryDark">@color/common_colorPrimaryDark</item>-->
        <item name="colorPrimaryDark">@color/color_white</item>
        <item name="colorAccent">@color/common_colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/FadeAnimationStyle</item>
        <item name="android:windowBackground">@color/color_white</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme" parent="@style/BaseAppTheme" />

    <style name="FadeAnimationStyle" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/translate_to_left_in</item>
        <item name="android:activityOpenExitAnimation">@anim/translate_to_left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/translate_to_right_in</item>
        <item name="android:activityCloseExitAnimation">@anim/translate_to_right_out</item>
    </style>

</resources>
